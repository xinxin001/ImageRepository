<p id="notice"><%= notice %></p>

<h1>Global Repository</h1>

<table class="table-striped table table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Preview</th>
      <th>Title</th>
      <th>Caption</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= link_to image_tag(picture.image, style:"width:auto;  height:150px", class:"img-thumbnail img-fluid" ), picture %></td>
        <td><%= picture.title %></td>
        <td><%= picture.caption %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

